@model MVC_Consumo_Api_Video_Club.Models.ActoresModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@(Model.idPelicula != 0 ? "Editar Actor a la Película" : "Editar actor")</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <input type="hidden" id="idPelicula" name="idPelicula" value="@Model.idPelicula"/>

        <div class="form-group">
            @Html.Label("Nombre del Actor", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Apellidos del Actor", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.apellidos, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.apellidos, "", new { @class = "text-danger" })
            </div>
        </div>
        
        @if (Model.idPelicula != 0)
        {
            <div class="form-group">
                @Html.Label("Sueldo del Actor", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SueldoActorEnPelicula, new { htmlAttributes = new { @class = "form-control", @value=Model.SueldoActorEnPelicula } })
                    @Html.ValidationMessageFor(model => model.SueldoActorEnPelicula, "", new { @class = "text-danger" })
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Modificar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @{
        if (Model.idPelicula != 0)
        {
            @Html.ActionLink("Volver al detalle", "Details", "Peliculas", new { id = Model.idPelicula }, null)
        }
        else
        {
            @Html.ActionLink("Volver al listado", "Index")
        }
    }
</div>
