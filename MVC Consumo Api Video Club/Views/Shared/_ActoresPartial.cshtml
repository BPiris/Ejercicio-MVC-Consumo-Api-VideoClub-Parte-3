@model IEnumerable<MVC_Consumo_Api_Video_Club.Models.ActoresModel>

<h2 style="text-align: center">Listado de Actores</h2>

<p>
    @Html.ActionLink("Añadir nuevo Actor a la pelicula", "Create", "Actores", new {idPelicula = Session["idPelicula"] },null)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nombre")
        </th>
        <th>
            @Html.DisplayName("Apellidos")
        </th>
        <th>
            @Html.DisplayName("Sueldo")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SueldoActorEnPelicula) €
            </td>
            <td>
                <a href="/Actores/Edit?id=@item.idActores&idPelicula=@Session["idPelicula"]&sueldo=@item.SueldoActorEnPelicula">Editar</a> |
                <a href="/Actores/Details?id=@item.idActores&idPelicula=@Session["idPelicula"]&sueldo=@item.SueldoActorEnPelicula">Detalles</a> |

                @*@Html.ActionLink("Detalles", "Details", "Actores", new {id = item.idActores}, null) |*@
                @Html.ActionLink("Borrado", "Delete", "Actores", new {id = item.idActores}, null)
            </td>
        </tr>
    }

</table>

